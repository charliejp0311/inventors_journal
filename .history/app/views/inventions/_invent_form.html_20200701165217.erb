<%= form_for invention do |f|%>
    <%=f.hidden_field :user_id, :value=>@user.id %>
    <%=f.label :category_id %><br/>
    <%=f.collection_check_boxes :category_ids, Category.all, :id, :category_id %><br/>
    <%= f.fields_for :category, invention.category.build do |c|%>
        <%= c.label :category %>
        <%= c.text_field :category %><br/>
    <%end%>
    <%=f.label :title %><br/>
    <%=f.text_field :title %><br/>
    <%=f.label :goal %><br/>
    <%=f.text_field :goal %><br/>
    <%=f.label :description %><br/>
    <%=f.text_area :description %><br/>
    <%=f.submit%>
<%end%>