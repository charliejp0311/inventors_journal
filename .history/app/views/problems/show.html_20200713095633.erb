<%= link_to @problem.invention.title, invention_path(@problem.invention) %>
<%= link_to @problem.invention.user.name, user_path(@problem.invention.user) %>
<%= @problem.problem %>
<% if @problem.solution %><br/>
    <%= @problem.solution.solution %><br/>
<% else %>
    <%= form_for @problem.build_solution do |f| %>
        <%= f.label :solution %>
        <%= f.text_field :solution %>
        <%= f.submit "Resolve" %>
    <% end %>
<% end %>